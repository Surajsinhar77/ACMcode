    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            width: 90%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            padding: 30px;
        }

        h1 {
            text-align: center;
            color: #007bff;
        }

        #login-form {
            margin-top: 20px;
        }

        label {
            font-weight: bold;
            color: #343a40;
        }

        input[type="text"],
        input[type="password"],
        select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            margin-bottom: 15px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }

        .alreadyAcc {
            margin-top: 15px;
            text-align: center;
        }

        .alreadyAcc-link {
            color: #007bff;
            text-decoration: none;
        }

        #error-message {
            margin-top: 15px;
            padding: 10px;
            border-radius: 4px;
            display: none;
        }
        .custom-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 1px solid #dee2e6;
            margin-bottom: 20px;
        }
        .card-div{
            display: flex;

        }

        .grid-container {
            display: grid;
            grid-template-columns: repeat(5, 1fr); /* 1fr means 1 fraction unit, distributing the space equally */
            gap: 16px; /* Adjust the gap between columns */
            margin: 20px; /* Adjust the margin for the entire grid */
        }

        /* Style for individual grid items */
        .grid-item {
            background-color: #f0f0f0;
            padding: 20px;
            border: 1px solid #ddd;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="text-center ">Library Management System - Dashboard</h1>
        <div id="dashboard-content" class="mb-3">
